<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:background="#FFF8DC"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:text="Chase your tail"
            android:textStyle="bold"
            android:background="#F0FFF0"
            android:textColor="#008000"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="376dp"
            android:layout_height="220dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chase_your_tail" />


        <TextView
            android:id="@+id/meaning"
            android:layout_width="wrap_content"
            android:layout_height="137dp"
            android:layout_marginTop="264dp"
            android:textColor="#00BFFF"
            android:text="MEANING:\n
To take action that is ineffectual and does not lead to progress.\n
Refers to how a dog can exhaust itself by chasing its own tail.\n"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/example"
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:layout_marginTop="390dp"
            android:textColor="#00BFFF"
            android:text="EXAMPLE:\n
1) In my first month at college I was continually chasing my own tail and being late for everything.\n
2) He's been chasing his tail all week collecting data but the report is still not ready.\n"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>