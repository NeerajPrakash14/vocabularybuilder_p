<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    android:background="#FFF8DC"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name1"
            android:layout_width="135dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:text="A GREY AREA"
            android:textStyle="bold"
            android:background="#F0FFF0"
            android:textColor="#008000"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/grey_area" />

        <TextView
            android:id="@+id/meaning1"
            android:layout_width="wrap_content"
            android:layout_height="168dp"
            android:layout_marginTop="244dp"
            android:textColor="#9400D3"
            android:text="MEANING:\n
A subject or problem that people do not know how to deal with because there are no clear rules.\n
An area of a subject or question that is difficult to put into a particular category because it is not clearly defined.\n
Lack of clarity."
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/example1"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginTop="424dp"
            android:textColor="#8A2BE2"
            android:text="EXAMPLE:\n
1) The legal difference between negligence and recklessness is a bit of a grey area.\n
2) The responsibility for social studies in the college is a gray area."
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>